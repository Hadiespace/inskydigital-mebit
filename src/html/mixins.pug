mixin simpleCard(title)
	section.simple-card&attributes(attributes)
		div.simple-card__container.container
			h2.simple-card__title!= title
			div.simple-card__buttons
				button.simple-card__swiper-button.simple-card__swiper-button--prev(type="button")
					span.visually-hidden Предыдущий слайд
					svg(width="10", height="16", aria-hidden="true")
						use(xlink:href="images/sprite.svg#preview-prev")
				button.simple-card__swiper-button.simple-card__swiper-button--next(type="button")
					span.visually-hidden Следующий слайд
					svg(width="10", height="16", aria-hidden="true")
						use(xlink:href="images/sprite.svg#preview-next")
			div.simple-card__swiper.swiper
				ul.simple-card__swiper-wrapper.swiper-wrapper
					each item in simpleCardItems
						li.simple-card__swiper-slide.swiper-slide.card.card--slider
							div.card__tags-wrapper
								div.card__tags
									if item.tags
										each tag in item.tags
											span!= tag
							// Стоковое состояние
							div.card__stock.stock-card
								span.stock-card__article Артикул #{item.article}
								h2.stock-card__title: a(href=favorites)!= item.title
								span.stock-card__type!= item.type
								div.stock-card__image.stock-card__image--simple
									img(src=item.image.src, alt=item.image.alt)
			div.simple-card__swiper-dots

