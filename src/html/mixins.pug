mixin simpleCard(title)
	section.simple-card&attributes(attributes)
		div.simple-card__container.container
			h2.simple-card__title!= title
			div.simple-card__buttons
				button.simple-card__swiper-button.simple-card__swiper-button--prev(type="button")
