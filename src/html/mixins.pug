//- PAGINATION
mixin pagination()
	div.pagination&attributes(attributes)
		a.pagination__button(href=favorites) ← <span>Предыдущая страница</span>
		div.pagination__pages
			a.pagination__page(href=favorites) 1
			a.pagination__page.pagination__page--current 2
			a.pagination__page(href=favorites) 3
			a.pagination__page(href=favorites) 4
			a.pagination__page(href=favorites) ...
			a.pagination__page(href=favorites) 10
		a.pagination__button(href=favorites) <span>Следующая страница</span> →

//- CHOICE CHECK
mixin choiceCheck(title, name, array)
	form.choice-check
		button.choice-check__button(type="button", aria-expanded="false")
			span!= title
			svg(width="10", height="22", aria-hidden="true")
				use(xlink:href="images/sprite.svg#choice-arrows")
		div.choice-check__list
			each check, index in array
				div.choice-check__item
					input.visually-hidden(type="checkbox", id=name + index, name="factory")
					label.choice-check__factory(for=name + index)!= check

