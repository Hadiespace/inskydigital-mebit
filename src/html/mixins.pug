		a.pagination__button(href=favorites) <span>Следующая страница</span> →

//- CHOICE CHECK
mixin choiceCheck(title, name, array)
	form.choice-check
		button.choice-check__button(type="button", aria-expanded="false")
			span!= title
			svg(width="10", height="22", aria-hidden="true")
				use(xlink:href="images/sprite.svg#choice-arrows")
		div.choice-check__list
			each check, index in array
				div.choice-check__item
					input.visually-hidden(type="checkbox", id=name + index, name="factory", value=check)
					label.choice-check__factory(for=name + index)!= check
		span.choice-check__default!= title

//- CHOICE RADIO
mixin choiceRadio(title, name, array)
	form.choice-radio&attributes(attributes)
		button.choice-radio__button(type="button", aria-expanded="false")
			span!= title
			svg(width="10", height="22", aria-hidden="true")
				use(xlink:href="images/sprite.svg#choice-arrows")
		div.choice-radio__list
			each radio, index in array
				div.choice-radio__item
					input.visually-hidden(type="radio", id=name + index, name="size")
					label.choice-radio__factory(for=name + index)!= radio

